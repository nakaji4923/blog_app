<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>作成日時</th>
    <th>更新日時</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.Title %></td>
    <td><%= post.Body %></td>
    <td><%= post.created_at.localtime.strftime("%Y年%m月%d日 %H:%M") %></td>
    <td><%= post.updated_at.localtime.strftime("%Y年%m月%d日 %H:%M") %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
